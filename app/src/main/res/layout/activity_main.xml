<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnBatterySaver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/batter_saver_settings"
        app:layout_constraintBottom_toTopOf="@+id/btnOptimizationSettings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnOptimizationSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/battery_optimization_settings"
        app:layout_constraintBottom_toTopOf="@+id/btnIgnoreBatteryOptimizationDirectly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnBatterySaver" />


    <Button
        android:id="@+id/btnIgnoreBatteryOptimizationDirectly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ignore_battery_optimization"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOptimizationSettings" />
</androidx.constraintlayout.widget.ConstraintLayout>